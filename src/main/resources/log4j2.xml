<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- Конфигурация корневого логгера -->
    <Appenders>
        <!-- Консольный аппендер, выводящий логи в стандартный поток вывода -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>

        <!-- Файловый аппендер, сохраняющий логи в файл app.log -->
        <File name="File" fileName="logs/app.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>

        <!-- Файловый аппендер для ошибок, сохраняющий логи в файл error.log -->
        <File name="ErrorFile" fileName="logs/error.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY" />
            </Filters>
        </File>
    </Appenders>

    <!-- Конфигурация логгеров -->
    <Loggers>
        <!-- Логгер для контроллера AdminRest -->
        <Logger name="com.example.yourpackage.AdminRest" level="debug" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Logger>

        <!-- Логгер для всех классов приложения -->
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
            <AppenderRef ref="ErrorFile" />
        </Root>
    </Loggers>
</Configuration>
